@model SuppliesAndDeman.Models.ViewModels.OrderVM
@{
}
@inject Microsoft.AspNetCore.Identity.UserManager<SuppliesAndDeman.Models.DataModels.User> userManager;
<div class="text-center">
    <h1 class=""></h1>
</div>
<form method="post">
    <div class="form-group">
        <label for="Item">Item(s) Needed:</label>
        <input type="text" class="form-control" id="Item" asp-for="itemNeeded" />
    </div>
    <div class="form-group">
        <label for="street">Address:</label>
        <input type="text" class="form-control" id="street" asp-for="street" />
    </div>
    <div class="form-group">
        <label for="zip">Zip Code:</label>
        <input type="text" class="form-control" asp-for="zip" id="zip"/>
    </div>
    <div class="form-group">
        <label for="country">Country:</label>
        <input type="text" class="form-control" asp-for="country" id="country" />
    </div>
    <input type="hidden" value="@userManager.GetUserId(User)" asp-for="UserId" />
    <input type="submit" class="btn btn-primary" value="Submit Request"/>
</form>